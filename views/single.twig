{% extends "base.twig" %}

{% block content %}
  <div class="article-wrapper container">
    <article class="article" id="post-{{ post.ID }}">
      <section class="article__introduction">
        <div class="introduction__img">
          <img src="{{ Image(post.thumbnail).src}}" 
          srcset="
          {{Image(post.thumbnail)|fit(image_size.retina.big.width, image_size.retina.big.height)}} {{image_size.retina.width}},
          {{Image(post.thumbnail)|fit(image_size.large.big.width, image_size.large.big.height)}} {{image_size.large.width}},
          {{Image(post.thumbnail)|fit(image_size.medium.big.width, image_size.medium.big.height)}} {{image_size.medium.width}},
          {{Image(post.thumbnail)|fit(image_size.mobile.big.width, image_size.mobile.big.height)}} {{image_size.mobile.width}}"
          alt="{{Image(post.thumbnail).alt}}">
        </div>
        <div class="social-share">
          <a href="https://twitter.com/intent/tweet?text={{post.title}}%20-%20Tagether%20{{post.link}}" class="social-share__item twitter-share-button" target="_blank">
            <svg aria-hidden="true" data-prefix="fab" data-icon="twitter" class="svg-inline--fa fa-twitter fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 512 512">
              <path fill="currentColor" d="M459.37 151.716c.325 4.548.325 9.097.325 13.645 0 138.72-105.583 298.558-298.558 298.558-59.452 0-114.68-17.219-161.137-47.106 8.447.974 16.568 1.299 25.34 1.299 49.055 0 94.213-16.568 130.274-44.832-46.132-.975-84.792-31.188-98.112-72.772 6.498.974 12.995 1.624 19.818 1.624 9.421 0 18.843-1.3 27.614-3.573-48.081-9.747-84.143-51.98-84.143-102.985v-1.299c13.969 7.797 30.214 12.67 47.431 13.319-28.264-18.843-46.781-51.005-46.781-87.391 0-19.492 5.197-37.36 14.294-52.954 51.655 63.675 129.3 105.258 216.365 109.807-1.624-7.797-2.599-15.918-2.599-24.04 0-57.828 46.782-104.934 104.934-104.934 30.213 0 57.502 12.67 76.67 33.137 23.715-4.548 46.456-13.32 66.599-25.34-7.798 24.366-24.366 44.833-46.132 57.827 21.117-2.273 41.584-8.122 60.426-16.243-14.292 20.791-32.161 39.308-52.628 54.253z"></path>
            </svg>
          </a>
          <a href="https://www.linkedin.com/shareArticle?mini=true&url={{post.link}}&title={{post.title}}%20-%20Tagether%20&source=Tagether" class="social-share__item" target="_blank">
            <svg aria-hidden="true" data-prefix="fab" data-icon="linkedin-in" class="svg-inline--fa fa-linkedin-in fa-w-14" role="img" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 448 512">
              <path fill="currentColor" d="M100.3 448H7.4V148.9h92.9V448zM53.8 108.1C24.1 108.1 0 83.5 0 53.8S24.1 0 53.8 0s53.8 24.1 53.8 53.8-24.1 54.3-53.8 54.3zM448 448h-92.7V302.4c0-34.7-.7-79.2-48.3-79.2-48.3 0-55.7 37.7-55.7 76.7V448h-92.8V148.9h89.1v40.8h1.3c12.4-23.5 42.7-48.3 87.9-48.3 94 0 111.3 61.9 111.3 142.3V448h-.1z"></path>
            </svg>
          </a>
          <a href="https://www.facebook.com/sharer/sharer.php?u={{post.link}}" class="social-share__item" target="_blank">
            <svg aria-hidden="true" data-prefix="fab" data-icon="facebook-f" class="svg-inline--fa fa-facebook-f fa-w-9" role="img" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 264 512">
              <path fill="currentColor" d="M76.7 512V283H0v-91h76.7v-71.7C76.7 42.4 124.3 0 193.8 0c33.3 0 61.9 2.5 70.2 3.6V85h-48.2c-37.8 0-45.1 18-45.1 44.3V192H256l-11.7 91h-73.6v229"></path>
            </svg>
          </a>
        </div>
        <div class="introduction__content">
          <span class="introduction__date">{{ post.date }}</span>
          <h1 class="introduction__title">{{ post.title }}</h1>
          <p class="introduction__excerpt">{{ post.post_excerpt }}</p>
        </div>
      </section>

      <!-- Article Content -->
      <section class="article__content">
        <div class="social-share social-share__content">
          <a href="https://twitter.com/intent/tweet?text={{post.title}}%20-%20Tagether%20{{post.link}}" class="social-share__item twitter-share-button" target="_blank">
            <svg aria-hidden="true" data-prefix="fab" data-icon="twitter" class="svg-inline--fa fa-twitter fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 512 512">
              <path fill="currentColor" d="M459.37 151.716c.325 4.548.325 9.097.325 13.645 0 138.72-105.583 298.558-298.558 298.558-59.452 0-114.68-17.219-161.137-47.106 8.447.974 16.568 1.299 25.34 1.299 49.055 0 94.213-16.568 130.274-44.832-46.132-.975-84.792-31.188-98.112-72.772 6.498.974 12.995 1.624 19.818 1.624 9.421 0 18.843-1.3 27.614-3.573-48.081-9.747-84.143-51.98-84.143-102.985v-1.299c13.969 7.797 30.214 12.67 47.431 13.319-28.264-18.843-46.781-51.005-46.781-87.391 0-19.492 5.197-37.36 14.294-52.954 51.655 63.675 129.3 105.258 216.365 109.807-1.624-7.797-2.599-15.918-2.599-24.04 0-57.828 46.782-104.934 104.934-104.934 30.213 0 57.502 12.67 76.67 33.137 23.715-4.548 46.456-13.32 66.599-25.34-7.798 24.366-24.366 44.833-46.132 57.827 21.117-2.273 41.584-8.122 60.426-16.243-14.292 20.791-32.161 39.308-52.628 54.253z"></path>
            </svg>
          </a>
          <a href="https://www.linkedin.com/shareArticle?mini=true&url={{post.link}}&title={{post.title}}%20-%20Tagether%20&source=Tagether" class="social-share__item" target="_blank">
            <svg aria-hidden="true" data-prefix="fab" data-icon="linkedin-in" class="svg-inline--fa fa-linkedin-in fa-w-14" role="img" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 448 512">
              <path fill="currentColor" d="M100.3 448H7.4V148.9h92.9V448zM53.8 108.1C24.1 108.1 0 83.5 0 53.8S24.1 0 53.8 0s53.8 24.1 53.8 53.8-24.1 54.3-53.8 54.3zM448 448h-92.7V302.4c0-34.7-.7-79.2-48.3-79.2-48.3 0-55.7 37.7-55.7 76.7V448h-92.8V148.9h89.1v40.8h1.3c12.4-23.5 42.7-48.3 87.9-48.3 94 0 111.3 61.9 111.3 142.3V448h-.1z"></path>
            </svg>
          </a>
          <a href="https://www.facebook.com/sharer/sharer.php?u={{post.link}}" class="social-share__item" target="_blank">
            <svg aria-hidden="true" data-prefix="fab" data-icon="facebook-f" class="svg-inline--fa fa-facebook-f fa-w-9" role="img" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 264 512">
              <path fill="currentColor" d="M76.7 512V283H0v-91h76.7v-71.7C76.7 42.4 124.3 0 193.8 0c33.3 0 61.9 2.5 70.2 3.6V85h-48.2c-37.8 0-45.1 18-45.1 44.3V192H256l-11.7 91h-73.6v229"></path>
            </svg>
          </a>
        </div>
        <div class="article-body">
          {{post.content}}
        </div>
        <div class="article-categories">
          <ul class="article-categories__list">
          {% for category in post.categories %}
<a href="{{category.link}}" class="category-cta">{{category.name}}</a>
          {% endfor %}          
          </ul>
        </div>
      </section>
      <!-- End Article content -->

      <!-- Next article -->
        {% if post.next %}
      <section class="article__next">
        <div class="article__next__content">
          <div class="article__next__label label label-blue">
            <h4>À lire ensuite</h4>
          </div>
          <h3 class="article__next__title">{{post.next.title}}</h3>
          <a href="{{ post.next.link }}" class="article__next__link">
            Lire la suite
            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px" viewbox="0 0 31.49 31.49" style="enable-background:new 0 0 31.49 31.49;" xml:space="preserve" width="512px" height="512px">
              <path d="M21.205,5.007c-0.429-0.444-1.143-0.444-1.587,0c-0.429,0.429-0.429,1.143,0,1.571l8.047,8.047H1.111  C0.492,14.626,0,15.118,0,15.737c0,0.619,0.492,1.127,1.111,1.127h26.554l-8.047,8.032c-0.429,0.444-0.429,1.159,0,1.587  c0.444,0.444,1.159,0.444,1.587,0l9.952-9.952c0.444-0.429,0.444-1.143,0-1.571L21.205,5.007z" fill="#FFFFFF"/>
            </svg>
          </a>
        </div>
      </section>
          {% endif %}
      <!-- End Next article -->

      <section class="article-newsletter container-sm">
        <div class="newsletter__form">
          <form action="https://twitter.us19.list-manage.com/subscribe/post-json?u=3234d3702a935ab9745bf364f&id=ce5ce20826&c=?" method="GET" class="newsletter">
            <input type="email" placeholder="Abonnez-vous à la newsletter" name="MERGE0" required="required" class="newsletter__field">
            <label class="newsletter__submit">
              <input type="submit" value="Confirmer">
              <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px" viewbox="0 0 31.49 31.49" style="enable-background:new 0 0 31.49 31.49;" xml:space="preserve" width="512px" height="512px">
                <path d="M21.205,5.007c-0.429-0.444-1.143-0.444-1.587,0c-0.429,0.429-0.429,1.143,0,1.571l8.047,8.047H1.111  C0.492,14.626,0,15.118,0,15.737c0,0.619,0.492,1.127,1.111,1.127h26.554l-8.047,8.032c-0.429,0.444-0.429,1.159,0,1.587  c0.444,0.444,1.159,0.444,1.587,0l9.952-9.952c0.444-0.429,0.444-1.143,0-1.571L21.205,5.007z" fill="#FFFFFF"/>
              </svg>
            </label>
          </form>
          <p class="newsletter__message"></p>
        </div>
      </section>
    </article>
  </div>
  <!-- /content-wrapper -->
{% endblock %}